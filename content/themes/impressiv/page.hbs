{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{#post}}
<header class="post-view-header js-blog-bg-image {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <div class="post-header-content">
        <h1 class="post-title js-bg-check">{{title}}</h1>
    </div>
</header>

<main class="post-view-content" role="main">

    <article class="{{post_class}}">
        <!-- below content unit, place below content -->
        <div class="OUTBRAIN" data-widget-id="TF_6" data-src="" data-ob-template="Buzznation" ></div>

        <section class="post-content row">
            <div class="small-12 columns">{{content}}</div>
        </section>

        <!-- sidebar unit, place in right sidebar -->
        <div class="OUTBRAIN" data-widget-id="TS_1" data-src="" data-ob-template="Buzznation" ></div>

    </article>

</main>
{{/post}}
