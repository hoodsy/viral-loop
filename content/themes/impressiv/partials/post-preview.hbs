<div class="post-preview">
  <a href="{{url}}">
    <article class="{{post_class}} {{#if image}}" style="background: url({{image}}); background-size: cover; {{else}}no-cover{{/if}}">
    </article>
    <span class="post-image-url" style="display: none;">{{image}}</span>
    <span class="tag-name" style='display: none;'>{{tag}}</span>
  </a>

  <div class="meta-container">
    <footer class="post-meta">
      <h1 class="post-title">{{title}}</h1>
      <div class="post-author-date">
        <span>{{author}} -</span>
        <time class="post-date"
              datetime="{{date format='YYYY-MM-DD'}}">
          {{date format="MMM DD, YYYY"}}
        </time>
      </div>
      <div class="post-tags">
        {{tags separator=""}}
      </div>
    </footer>
  </div>
</div>
